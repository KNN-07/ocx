{
	"$schema": "https://opencode.ai/config.json",
	"mcp": {
		"context7": {
			"type": "remote",
			"url": "https://mcp.context7.com/mcp",
			"enabled": true
		},
		"gh_grep": {
			"type": "remote",
			"url": "https://mcp.grep.app",
			"enabled": true
		},
		"exa": {
			"type": "remote",
			"url": "https://mcp.exa.ai/mcp",
			"enabled": true
		}
	},
	"tools": {
		"context7_*": false,
		"gh_grep_*": false,
		"exa_*": false,
		"webfetch": false
	},
	"agent": {
		"kdco-librarian": {
			"tools": {
				"context7_*": true,
				"gh_grep_*": true,
				"exa_*": true
			}
		}
	}
}