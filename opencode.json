{
	"$schema": "https://opencode.ai/config.json",
	"mcp": {
		"context7": {
			"type": "remote",
			"enabled": true,
			"url": "https://mcp.context7.com/mcp"
		},
		"gh_grep": {
			"type": "remote",
			"enabled": true,
			"url": "https://mcp.grep.app"
		},
		"exa": {
			"type": "remote",
			"enabled": true,
			"url": "https://mcp.exa.ai/mcp"
		}
	},
	"permission": {
		"bash": {
			"curl *": "deny",
			"wget *": "deny",
			"*": "allow"
		},
		"webfetch": "deny"
	}
}
