{
  "name": "ocx",
  "version": "0.1.0",
  "description": "ShadCN-style CLI for OpenCode extensions - agents, skills, plugins, commands",
  "author": "kdcokenny",
  "license": "MIT",
  "type": "module",
  "private": true,
  "packageManager": "bun@1.3.5",
  "repository": {
    "type": "git",
    "url": "https://github.com/kdcokenny/ocx.git"
  },
  "workspaces": [
    "packages/*",
    "registry/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "check": "biome check . && turbo run typecheck",
    "format": "biome check --write .",
    "test": "turbo run test",
    "typecheck": "turbo run typecheck"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "turbo": "^2.5.4",
    "typescript": "^5.8.3"
  }
}
