{
	"name": "ocx-schemas",
	"version": "1.0.11",
	"description": "Zod schemas and types for the OpenCode extension ecosystem",
	"type": "module",
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js"
		}
	},
	"files": [
		"dist",
		"src"
	],
	"scripts": {
		"build": "tsc",
		"check:types": "tsc --noEmit",
		"prepublishOnly": "bun run build"
	},
	"dependencies": {
		"zod": "^3.25.67"
	},
	"peerDependencies": {
		"zod": "^3.0.0"
	},
	"publishConfig": {
		"access": "public"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/kdcokenny/ocx.git",
		"directory": "packages/schemas"
	},
	"keywords": [
		"ocx",
		"opencode",
		"schemas",
		"zod",
		"validation",
		"registry"
	],
	"author": "kdcokenny",
	"license": "MIT"
}
