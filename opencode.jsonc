{
	"$schema": "https://opencode.ai/config.json",
	"tools": {
		"task": false,
		"context7_*": false,
		"exa_*": false,
		"gh_grep_*": false,
		"kagi_*": false,
		"webfetch": false
	},
	"agent": {
		"researcher": {
			"tools": {
				"context7_*": true,
				"exa_*": false,
				"gh_grep_*": true,
				"kagi_*": true,
				"write": false,
				"edit": false,
				"bash": false
			}
		},
		"scribe": {
			"tools": {
				"bash": false,
				"edit": true,
				"glob": true,
				"read": true,
				"write": true
			}
		},
		"coder": {
			"tools": {
				"context7_*": false,
				"exa_*": false,
				"gh_grep_*": false,
				"read": true,
				"write": true,
				"edit": true,
				"glob": true,
				"grep": true,
				"bash": true
			}
		},
		"plan": {
			"tools": {
				"edit": false,
				"write": false,
				"bash": false,
				"task": true
			}
		},
		"build": {
			"tools": {
				"edit": false,
				"write": false,
				"bash": false,
				"task": true
			},
			"prompt": "You are a **build orchestrator**. You coordinate implementation through delegation - you do NOT implement directly.\\n\\n## Your Role\\n- Delegate implementation to `coder`\\n- Delegate documentation to `scribe`\\n- Delegate codebase analysis to `explore`\\n- Delegate external research to `researcher`\\n- Interpret results and decide next steps\\n\\n## Critical Constraint\\nYou CANNOT edit files or run commands directly. For ALL implementation and verification, delegate to `coder`."
		},
		"explore": {
			"tools": {
				"write": false,
				"edit": false,
				"bash": false
			}
		}
	},
	"mcp": {
		"context7": {
			"type": "remote",
			"url": "https://mcp.context7.com/mcp",
			"enabled": true
		},
		"exa": {
			"type": "remote",
			"url": "https://mcp.exa.ai/mcp",
			"enabled": false
		},
		"gh_grep": {
			"type": "remote",
			"url": "https://mcp.grep.app",
			"enabled": true
		},
		"kagi": {
			"type": "local",
			"command": ["npx", "-y", "github:czottmann/kagi-ken-mcp"],
			"environment": {
				"KAGI_SESSION_TOKEN": "{file:~/.secrets/kagi-session-token}"
			},
			"enabled": true
		}
	},
	"plugin": ["@tarquinen/opencode-dcp@1.1.2"]
}
